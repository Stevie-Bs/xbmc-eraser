<includes>
	<include name="HomepageSystemInfoWidget">
		<control type="group">
			<include>VisibleFadeEffect</include> 
			<animation effect="fade" time="300" delay="1000">WindowOpen</animation> 
			<animation effect="fade" time="200">WindowClose</animation> 

			<control type="group">
				<posx>225r</posx>
				<posy>0</posy>
				<width>225</width>
				<height>301</height>
				<visible>Container(9000).Hasfocus(5)</visible> 
			    <animation effect="slide" start="600,0" end="0,0" time="300" delay="300">Visible</animation> 
			    <animation effect="slide" start="0,0" end="0,-240" time="300">Hidden</animation> 

				<control type="image">
				  <description>background</description> 
					<posx>920r</posx> 
					<aspectratio alignx="left">stretch</aspectratio> 
					<posy>0</posy> 
					<width>920</width> 
					<height>240</height> 
					<texture border="10" flipy="true" diffuse="recentlyaddeddiffuse.png">rightlistbackground.png</texture> 
				</control>

				<control type="label" id="52">
				  <description>XBMC XBE BUILD Version</description> 
				  <posx>20r</posx> 
				  <posy>10</posy> 
				  <width>800</width> 
				  <label>XBMC $INFO[System.BuildVersion] ($INFO[System.BuildDate])</label>
				  <align>right</align> 
				  <textcolor>orange</textcolor> 
				  <shadowcolor>black</shadowcolor> 
				  <font>cirrus_20_Bold</font> 
				</control>
				<control type="label" id="52">
				  <description>CPU Text</description> 
				  <posx>20r</posx> 
				  <posy>60</posy> 
				  <width>800</width> 
				  <height>25</height> 
				  <label>$LOCALIZE[13271] $INFO[System.CPUUsage]</label> 
				  <align>right</align> 
				  <aligny>center</aligny> 
				  <textcolor>white</textcolor> 
				  <shadowcolor>black</shadowcolor> 
				  <font>cirrus_16_Bold</font> 
				</control>
				
				<control type="label" id="52">
				  <description>Memory Text</description> 
				  <posx>20r</posx> 
				  <posy>90</posy> 
				  <width>350</width> 
				  <height>25</height> 
				  <label>$LOCALIZE[31309] $INFO[system.memory(used.percent)]</label> 
				  <align>right</align> 
				  <aligny>center</aligny> 
				  <textcolor>white</textcolor> 
				  <shadowcolor>black</shadowcolor> 
				  <font>cirrus_16_Bold</font> 
				</control>
				
				<control type="label" id="52">
				  <description>Temp CPU</description> 
				  <posx>20r</posx> 
				  <posy>120</posy> 
				  <width>350</width> 
				  <height>25</height> 
				  <label>Temp CPU: $INFO[System.CPUTemperature]</label> 
				  <align>right</align> 
				  <aligny>center</aligny> 
				  <textcolor>white</textcolor> 
				  <shadowcolor>black</shadowcolor> 
				  <font>cirrus_16_Bold</font> 
				</control>
				<control type="label" id="52">
				  <description>Temp GPU</description> 
				  <posx>20r</posx> 
				  <posy>150</posy> 
				  <width>350</width> 
				  <height>25</height> 
				  <label>Temp GPU: $INFO[System.GPUTemperature]</label> 
				  <align>right</align> 
				  <aligny>center</aligny> 
				  <textcolor>white</textcolor> 
				  <shadowcolor>black</shadowcolor> 
				  <font>cirrus_16_Bold</font> 
				</control>
				<control type="label" id="52">
				  <description>Uptime</description> 
				  <posx>20r</posx> 
				  <posy>180</posy> 
				  <width>350</width> 
				  <height>25</height> 
				  <label>Uptime: $INFO[System.Uptime]</label> 
				  <align>right</align> 
				  <aligny>center</aligny> 
				  <textcolor>white</textcolor> 
				  <shadowcolor>black</shadowcolor> 
				  <font>cirrus_16_Bold</font> 
				</control>
			
				
			</control>
		</control>
	</include>
</includes>