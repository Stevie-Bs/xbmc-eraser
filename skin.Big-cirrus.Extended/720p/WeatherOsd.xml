<includes>
	<include name="WeatherOSD">
		<control type="group">
		  <posx>130r</posx> 
		  <posy>15</posy> 
		  <visible>!Skin.HasSetting(homepageWeatherinfo) + Weather.IsFetched</visible> 
		<control type="image">
		  <description>Weather image</description> 
		  <posx>75</posx> 
		  <posy>-13</posy> 
		  <width>50</width> 
		  <height>50</height> 
		  <aspectratio>keep</aspectratio> 
		  <texture>$INFO[Weather.Conditions]</texture> 
		  <visible>!Skin.HasSetting(EnableAnimationWeather)</visible> 
		</control>
		<control type="multiimage">
		  <posx>75</posx> 
		  <posy>-13</posy> 
		  <width>50</width> 
		  <height>50</height> 
		  <aspectratio>keep</aspectratio> 
		  <imagepath>special://skin/images/weather/$INFO[Weather.FanartCode]</imagepath> 
		  <timeperimage>100</timeperimage> 
		  <randomize>false</randomize> 
		  <fadetime>0</fadetime> 
		  <visible>Skin.HasSetting(EnableAnimationWeather)</visible> 
		</control>

		
		<control type="label">
		  <description>temp label</description> 
		  <posx>0</posx> 
		  <posy>0</posy> 
		  <width>200</width> 
		  <height>28</height> 
		  <aligny>center</aligny> 
		  <font>cirrus_24</font> 
		  <textcolor>white</textcolor> 
		  <shadowcolor>black</shadowcolor> 
		  <label>$INFO[Weather.Temperature]</label> 
		  </control>
		</control>
	</include>
</includes>
